{% extends 'adminbase.html.twig' %}

{% block title %}Setting index{% endblock %}

{% block body %}
    <h1>Setting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Description</th>
                <th>Company</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Instagram</th>
                <th>Twitter</th>
                <th>Facebook</th>
                <th>Aboutus</th>
                <th>Contact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.title }}</td>
                <td>{{ setting.keywords }}</td>
                <td>{{ setting.description }}</td>
                <td>{{ setting.company }}</td>
                <td>{{ setting.address }}</td>
                <td>{{ setting.phone }}</td>
                <td>{{ setting.email }}</td>
                <td>{{ setting.instagram }}</td>
                <td>{{ setting.twitter }}</td>
                <td>{{ setting.facebook }}</td>
                <td>{{ setting.aboutus }}</td>
                <td>{{ setting.contact }}</td>
                <td>
                    <a href="{{ path('setting_show', {'id': setting.id}) }}">show</a>
                    <a href="{{ path('setting_edit', {'id': setting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('setting_new') }}">Create new</a>
{% endblock %}
